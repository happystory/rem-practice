px2rem($px)
  $rem = 37.5px
  ($px / $rem)rem

.clearfix:after
  content: ""
  display: block
  clear: both

.header
  padding-left: px2rem(23px)
  height: px2rem(40px)
  background-color: red
  .header-item
    float: left
    margin-right: px2rem(20px)
    color: #ffcdcecd 
    font-size: px2rem(16px)
    line-height: px2rem(40px)
    &:nth-child(2)
      color: #fff
      font-size: px2rem(17px)

.banner-content
  position: relative
  .banner
    display: block
    width: 100%
    height: px2rem(190px)
  .banner-title
    position: absolute
    left: px2rem(15px)
    bottom: px2rem(15px)
    font-size: px2rem(16px)
    color: #fff

.news-content
  .news-item
    padding: 0 px2rem(15px)
    .item-inner
      position: relative
      display: flex
      padding: px2rem(10px) 0
      border-bottom: 1px solid #e5e5e5
      .news-img
        display: block
        margin-right: px2rem(15px)
        width: px2rem(95px)
        height: px2rem(70px)
      .news-title
        flex: 1
        color: #404040
        font-size: px2rem(17px)
        line-height: px2rem(20px)
      .time
        position: absolute
        left: px2rem(110px)
        bottom: px2rem(17px)
        font-size: px2rem(12px)
        color: #888
      .num
        position: absolute
        right: px2rem(4px)
        bottom: px2rem(17px)
        color: #888
        font-size: px2rem(12px)
        &:before
          position: absolute
          top: px2rem(-2px)
          left: px2rem(-20px)
          content: ""
          display: block
